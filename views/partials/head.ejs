<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.svg">
    <% if(title) { %>
        <title>Fenrus - <%= title %></title>
    <% } else { %>
        <title>Fenrus</title>
    <% } %>
    <link rel="stylesheet" href="/css/site.min.css?version=<%= version %>" />
    <link id="theme-style" rel="stylesheet" href="/themes/<%= settings.Theme || 'Default' %>/theme.min.css?version=<%= version %>" />

    <% 
        var accentRgb = parseInt(settings.AccentColor.substring(1, 3), 16) + "," + 
                        parseInt(settings.AccentColor.substring(3, 5), 16) + "," + 
                        parseInt(settings.AccentColor.substring(5, 7), 16);
    %>
    
    <style>
        body {
            --accent-rgb:<%= accentRgb %>;
            --accent:<%= settings.AccentColor %>;
        }
    </style>

    <% if(settings.BackgroundImage) { %>
        <style>
            .main-content{        
                background: url('<%= settings.BackgroundImage %>');
            }
        </style>
    <% } %> 
</head>

<body>  
    <ul class="main-menu">
        <li><a title="Home" href="/"><span class="icon-home1"></span></a></li>
        <li><a title="Groups" href="/groups"><span class="icon-bars"></span></a></li>
        <li><a title="Settings" href="/settings"><span class="icon-cogs"></span></a></li>
        <% if(user.IsAdmin) { %>
            <li><a title="Users" href="/users"><span class="icon-user-circle"></span></a></li>
            <li><a title="System" href="/system"><span class="icon-lock"></span></a></li>
        <% } %>
        <li class="li-about"><a title="About" href="/about"><span class="icon-fenrus"></span></a></li>
    </ul>


    <div class="main-content">