
<table>
    <thead>
        <tr>
            <th class="name">Name</th>
            <th class="enabled">Enabled</th>
            <th class="controls"></th>
        </tr>
    </thead>
    <tbody>
        <template x-for="item in model.items">
            <tr :id="item.Uid">
                <td class="name">
                    <template x-if="item.IsSystem && !model.IsAdmin">
                        <span x-text="item.Name"></span>
                    </template>
                    <template x-if="!item.IsSystem">
                        <a :href="model.baseUrl + '/' + item.Uid" x-text="item.Name"></a>
                    </template>
                    <template x-if="item.IsSystem && model.IsAdmin">
                        <a :href="model.baseUrl + '/system/' + item.Uid" x-text="item.Name"></a>
                    </template>
                </td>
                <td class="enabled">      
                    <template x-if="item.Uid !== 'Guest'">
                        <label :for="item.Uid + '-enabled'" class="toggle-switchy">
                            <input type="checkbox" :id="item.Uid + '-enabled'" x-model="item.Enabled" @change="setStatus(item.Uid, event.target.checked)" />
                            <span class="toggle">
                                <span class="switch"></span>
                            </span>
                        </label>
                    </template>
                </td>
                <td class="controls">
                    <template x-if="!item.IsSystem">
                        <a title="Edit" :href="model.baseUrl + '/' + item.Uid" class="icon-edit"></a>
                    </template>    
                    <template x-if="item.IsSystem && model.IsAdmin">
                        <a title="Edit" :href="model.baseUrl + '/system/' + item.Uid" class="icon-edit"></a>
                    </template>        
                    <template x-if="item.Uid !== 'Guest'">                 
                        <span title="Delete" class="icon-trash" @click="remove(item)"></span>
                    </template>
                </td>
            </tr>
        </template>
    </tbody>
</table>