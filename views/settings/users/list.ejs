<%- include('../head.ejs') %>

<div x-data="Users">
    <div class="top-row">
        <span class="title">
            <span class="icon-users"></span>
            Users
        </span>
        <span class="allow-register-label">Allow Registrations:</span>
        <span class="enable">                
            <label for="allow-register" class="toggle-switchy">
                <input type="checkbox" id="allow-register" <%= allowRegister ? 'checked' : '' %> @change="allowRegisterChange(event)" />
                <span class="toggle">
                    <span class="switch"></span>
                </span>
            </label>
        </span>
    </div>

    <div class="list">
            
        <table>
            <thead>
                <tr>
                    <th class="name">Name</th>
                    <th class="admin switch">Admin</th>
                    <th class="controls"></th>
                </tr>
            </thead>
            <tbody>
                <% for (let item of users) { 
                    if(!item)
                        continue;
                    let isSelf = item.Uid == user.Uid;
                %>
                    <tr id="<%= item.Uid %>">
                        <td class="name">
                            <%= item.Username %>
                        </td>
                        <td class="admin switch">               
                            <label for="is-admin-<%= item.Uid %>" class="toggle-switchy">
                                <input type="checkbox" id="is-admin-<%= item.Uid %>" <%= isSelf ? 'disabled' : '' %> <%= item.IsAdmin ? 'checked' : '' %> @change="adminChange(event, '<%= item.Uid %>')" />
                                <span class="toggle">
                                    <span class="switch"></span>
                                </span>
                            </label>
                        </td>   
                        <td class="controls">  
                            <% if (isSelf === false) { %>              
                                <span title="Delete" class="icon-trash" @click="deleteUser('<%= item.Uid %>', '<%= item.Username%>')"></span>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>


<script>

    document.addEventListener('alpine:init', () => {
        Alpine.data('Users', () => ({
            adminChange(event, uid) {        
                fetch(`/settings/users/${uid}/set-admin/${event.target.checked}`);
            },

            allowRegisterChange(event) {        
                fetch(`/settings/users/set-allow-register/${event.target.checked}`);
            },
            
            deleteUser(uid, name) {
                console.log('deleting', uid, name);
                confirmPrompt(`Are you sure you want to delete the user "${name}"?`).then(() => 
                {
                    fetch(`/settings/users/${uid}`, { method: 'DELETE'}).then(()=>{
                        document.getElementById(uid).remove(); 
                    });
                }).catch(err => {

                });
            }
        }))
    });
</script>

